package senaiBr.senai.CV.comissao;

import java.util.Scanner;

public class ComissaoVendedor {

	public static void main(String[] args) {
		String name;
		double valorVendas;
		int tempoTrabalho;
		
		Scanner ler = new Scanner(System.in);
		
		System.out.print("Qual o seu nome?: ");
		name = ler.next();
		
		System.out.print("Qual o valor total da venda no mês?: ");
		valorVendas = ler.nextDouble();
		
		System.out.print("Quantos anos você trabalhou na empresa?: ");
		tempoTrabalho = ler.nextInt();
		
		ler.close();
		
		if(valorVendas > 10000 && tempoTrabalho > 1) {
			double comissao;
			comissao = (valorVendas * 0.05);
			System.out.println("A comissâo de " + name + " será de " + comissao + " pelas vendas do mês!");
		} else if (valorVendas > 20000 && tempoTrabalho > 1) {
			double comissao;
			comissao = (valorVendas * 0.10);
			System.out.println("A comissão de " + name + " será de " + comissao + " pelas vendas do mês!");
		} else {
			double comissao;
			comissao = (valorVendas * 0.03);
			System.out.println("A comissão de " + name + " será de " + comissao + " pelas vendas do mês!");
		}
			
	}

}
